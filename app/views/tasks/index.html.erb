<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <div class="row">
    <% @tasks.each do |task| %>
      <div class="card">
        <%= render task %>
          <%= link_to "Show this task", task, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New task", new_task_path %>
